<p id="notice"><%= notice %></p>

<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>Foto</th>      
      <th>Nome</th>
      <th>Idade</th>
      <th>Informacoes</th>
      <th>Cidade desap</th>
      <th>Uf desap</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.foto %></td>        
        <td><%= animal.nome %></td>
        <td><%= animal.idade %></td>
        <td><%= animal.informacoes %></td>
        <td><%= animal.cidade_desap %></td>
        <td><%= animal.uf_desap %></td>
        <td><%= animal.status %></td>
        <td><%= link_to 'Show', animal %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

